[ ca ]
default_ca=CA_default

[ CA_default ]
# Diretórios e arquivos
dir=/home/paulo/pkibrb/ca/brbca
certs=$dir/certs
crl_dir=$dir/crl
new_certs_dir=$dir/newcerts
database=$dir/index.txt
serial=$dir/serial
crl=$dir/crl.pem
copy_extensions=copyall
default_crl_days=180
unique_subject=no

# Algoritmos e configurações
private_key=$dir/private/brbca.key.pem
certificate=$dir/certs/brbca.cert.pem
default_days=3650
default_md=sha256

[ policy_dv ]
commonName=supplied

[ policy_ov ]
countryName=supplied
stateOrProvinceName=supplied
organizationName=supplied
organizationalUnitName=optional
commonName=supplied
emailAddress=optional

[ policy_ev ]
countryName=supplied
stateOrProvinceName=supplied
localityName=supplied
organizationName=supplied
organizationalUnitName=optional
commonName=supplied
businessCategory=supplied
serialNumber=supplied
jurisdictionCountryName=supplied
emailAddress=optional

[ req ]
default_bits=4096
default_md=sha256
default_keyfile=brbca.key.pem
distinguished_name=req_dn
x509_extensions=req_ext

[ req_dn ]
countryName=Country Name (2 letter code)
countryName_default=BR
stateOrProvinceName=State or Province Name (full name)
stateOrProvinceName_default=Distrito Federal
localityName=Locality Name (eg, city)
localityName_default=Brasilia
0.organizationName=Organization Name (eg, company)
organizationalUnitName=Organizational Unit Name (eg, section)
commonName=Common Name (e.g. server FQDN or YOUR name)

[ req_ext ]
basicConstraints=critical,CA:TRUE
subjectKeyIdentifier=hash
authorityKeyIdentifier=keyid:always,issuer
keyUsage=critical,digitalSignature,cRLSign,keyCertSign
nsCertType=sslCA,emailCA
